<%= form_with(model: [@topic, @post, @comment, user_comment_rating]) do |form| %>
  <% if user_comment_rating.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user_comment_rating.errors.count, 'error') %> prohibited this rating from being saved:</h2>
      <ul>
        <% user_comment_rating.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :c_rating, 'Star:' %>
    <%= form.collection_radio_buttons :c_rating, (1..5).reverse_each.map { |n| [n, "#{n}⭐"] }, :first, :last do |b| %>
      <%= b.radio_button %>
      <%= b.label(style: 'display: inline') %>
    <% end %>
    <%= form.submit 'Add' %>
  </div>

<% end %>