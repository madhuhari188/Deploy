<div id="<%= dom_id comment %>">
  <h3>
    Comment:
    <%= comment.body %>
  </h3><br><br>
  <h5>Comments Ratings</h5>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Ratings</th>
      <th scope="col">User</th>
<!--      <th scope="col">Handle</th>-->
    </tr>
    </thead>
    <tbody>
      <% @comment.user_comment_ratings.each_with_index do |ratings,index| %>
    <tr>
        <td><%= index.next %></td>
        <td><%= ratings.c_rating %>‚≠ê</td>
        <td><%= User.find(ratings.user_id).email %></td>
    </tr>
      <% end %>
    </tbody>
  </table>

</div>
